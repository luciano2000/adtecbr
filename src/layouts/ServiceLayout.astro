---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  icon: string;
  type: 'servico' | 'consultoria';
  features: string[];
}

const { title, description, icon, type, features } = Astro.props;

const whatsappUrl = `https://api.whatsapp.com/send/?phone=5511978385112&text=Ol%C3%A1%21+Gostaria+de+mais+informa%C3%A7%C3%B5es+sobre+${encodeURIComponent(title)}&type=phone_number&app_absent=0`;
---

<BaseLayout title={`${title} — AD TEC`} description={description}>
  <section class="service-page">
    <div class="container">
      <a href="/servicos" class="service-back">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Todos os serviços
      </a>

      <div class="service-hero">
        <span class="service-icon">{icon}</span>
        <span class:list={['tag', type === 'consultoria' ? 'tag-consulting' : 'tag-service']}>
          {type === 'consultoria' ? 'Consultoria' : 'Serviço'}
        </span>
        <h1>{title}</h1>
        <p class="service-desc">{description}</p>
      </div>

      <div class="service-content">
        <div class="service-details">
          <slot />
        </div>

        <aside class="service-sidebar">
          <div class="sidebar-card">
            <h3>O que inclui</h3>
            <ul class="features-list">
              {features.map((feature) => (
                <li>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 6L9 17l-5-5"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>

          <div class="sidebar-cta">
            <h3>Interessado?</h3>
            <p>Fale com a gente para saber mais sobre este serviço.</p>
            <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="btn btn-whatsapp" style="width:100%">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              Falar sobre {title}
            </a>
          </div>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .service-page {
    padding-top: calc(var(--header-height) + var(--space-12));
    padding-bottom: var(--space-20);
  }

  .service-back {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-gray-500);
    margin-bottom: var(--space-8);
    transition: color var(--transition-fast);
  }
  .service-back:hover { color: var(--color-primary); }

  .service-hero {
    text-align: center;
    margin-bottom: var(--space-12);
    padding-bottom: var(--space-10);
    border-bottom: 1px solid var(--color-gray-200);
  }

  .service-icon {
    display: block;
    font-size: 4rem;
    margin-bottom: var(--space-4);
  }

  .service-hero .tag {
    margin-bottom: var(--space-4);
  }

  .service-hero h1 {
    margin-bottom: var(--space-4);
  }

  .service-desc {
    font-size: var(--text-lg);
    color: var(--color-gray-500);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .service-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: var(--space-10);
  }

  .service-details {
    font-size: var(--text-lg);
    line-height: 1.8;
    color: var(--color-gray-700);
  }

  .service-details :global(h2) {
    font-size: var(--text-2xl);
    color: var(--color-dark);
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
  }

  .service-details :global(p) {
    margin-bottom: var(--space-4);
  }

  .service-details :global(ul) {
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
    list-style: disc;
  }

  .service-details :global(li) {
    margin-bottom: var(--space-2);
  }

  .sidebar-card,
  .sidebar-cta {
    padding: var(--space-6);
    background: var(--color-light);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-gray-200);
    margin-bottom: var(--space-6);
  }

  .sidebar-card h3,
  .sidebar-cta h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-4);
  }

  .features-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .features-list li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    font-size: var(--text-sm);
    color: var(--color-gray-700);
    line-height: 1.5;
  }

  .features-list svg {
    flex-shrink: 0;
    margin-top: 2px;
  }

  .sidebar-cta p {
    font-size: var(--text-sm);
    color: var(--color-gray-500);
    margin-bottom: var(--space-4);
  }

  @media (max-width: 768px) {
    .service-content {
      grid-template-columns: 1fr;
    }
  }
</style>
