---
const currentYear = new Date().getFullYear();

const footerLinks = [
  { href: '/', label: 'Home' },
  { href: '/servicos', label: 'Serviços' },
  { href: '/blog', label: 'Blog' },
  { href: '/contato', label: 'Contato' },
];

const whatsappUrl = 'https://api.whatsapp.com/send/?phone=5511978385112&text=Ol%C3%A1%21+Gostaria+de+mais+informa%C3%A7%C3%B5es+sobre+a+AD+TEC&type=phone_number&app_absent=0';
---

<footer class="footer">
  <div class="container footer-inner">
    <div class="footer-brand">
      <a href="/" aria-label="AD TEC">
        <img src="/images/adtecn.png" alt="AD TEC" width="120" height="34" class="footer-logo" />
      </a>
      <p class="footer-desc">
        Soluções práticas, rápidas e eficientes em marketing digital, publicidade e tecnologia.
      </p>
    </div>

    <div class="footer-links">
      <h4 class="footer-heading">Navegação</h4>
      <ul>
        {footerLinks.map((link) => (
          <li><a href={link.href}>{link.label}</a></li>
        ))}
      </ul>
    </div>

    <div class="footer-links">
      <h4 class="footer-heading">Serviços</h4>
      <ul>
        <li><a href="/servicos/criacao-de-sites">Criação de Sites</a></li>
        <li><a href="/servicos/identidade-visual">Identidade Visual</a></li>
        <li><a href="/servicos/consultoria-adtech">Consultoria Ad Tech</a></li>
        <li><a href="/servicos/automacao-atendimento">Automação de Atendimento</a></li>
      </ul>
    </div>

    <div class="footer-contact">
      <h4 class="footer-heading">Contato</h4>
      <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="footer-whatsapp">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        WhatsApp
      </a>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container footer-bottom-inner">
      <p>&copy; {currentYear} AD TEC Soluções em Tecnologia e Publicidade LTDA. Todos os direitos reservados.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-dark);
    color: var(--color-gray-300);
    padding-top: var(--space-16);
  }

  .footer-inner {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: var(--space-10);
  }

  .footer-logo {
    filter: brightness(0) invert(1);
    margin-bottom: var(--space-4);
  }

  .footer-desc {
    font-size: var(--text-sm);
    line-height: 1.7;
    max-width: 280px;
  }

  .footer-heading {
    color: var(--color-white);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: var(--space-4);
  }

  .footer-links ul {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer-links a {
    color: var(--color-gray-400);
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: var(--color-white);
  }

  .footer-whatsapp {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: #25D366;
    font-weight: 500;
    font-size: var(--text-sm);
    transition: all var(--transition-fast);
  }

  .footer-whatsapp:hover {
    color: #1EBE57;
  }

  .footer-bottom {
    border-top: 1px solid var(--color-dark-soft);
    margin-top: var(--space-12);
    padding: var(--space-6) 0;
  }

  .footer-bottom-inner {
    text-align: center;
  }

  .footer-bottom p {
    font-size: var(--text-xs);
    color: var(--color-gray-500);
  }

  @media (max-width: 768px) {
    .footer-inner {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-8);
    }

    .footer-brand {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 480px) {
    .footer-inner {
      grid-template-columns: 1fr;
    }
  }
</style>
